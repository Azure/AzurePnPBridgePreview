  "displayName": "CO2 Sensor Capability Model",
  "contents": [
    {
      "@type": "Component",
      "name": "deviceInformation",
      "schema": {
        "@id": "dtmi:azure:DeviceManagement:DeviceInformation;1",
        "@type": "Interface",
        "displayName": "Device Information",
        "@context": "dtmi:dtdl:context;2",
        "contents": [
          {
              "@type": "Property",
              "name": "manufacturer",
              "displayName": "Manufacturer",
              "schema": "string",
              "comment": "Company name of the device manufacturer. This could be the same as the name of the original equipment manufacturer (OEM). Ex. Contoso."
          },
          {
              "@type": "Property",
              "name": "model",
              "displayName": "Device model",
              "schema": "string",
              "comment": "Device model name or ID. Ex. Surface Book 2."
          },
          {
              "@type": "Property",
              "name": "swVersion",
              "displayName": "Software version",
              "schema": "string",
              "comment": "Version of the software on your device. This could be the version of your firmware. Ex. 1.3.45"
          },
          {
              "@type": "Property",
              "name": "osName",
              "displayName": "Operating system name",
              "schema": "string",
              "comment": "Name of the operating system on the device. Ex. Windows 10 IoT Core."
          },
          {
              "@type": "Property",
              "name": "processorArchitecture",
              "displayName": "Processor architecture",
              "schema": "string",
              "comment": "Architecture of the processor on the device. Ex. x64 or ARM."
          },
          {
              "@type": "Property",
              "name": "processorManufacturer",
              "displayName": "Processor manufacturer",
              "schema": "string",
              "comment": "Name of the manufacturer of the processor on the device. Ex. Intel."
          },
          {
              "@type": [
                "Property",
                "DataSize"
              ],
              "name": "totalStorage",
              "displayName": "Total storage",
              "schema": "long",
              "unit": "kibibyte",
              "comment": "Total available storage on the device in kilobytes. Ex. 2048000 kilobytes."
          },
          {
              "@type": [
                "Property",
                "DataSize"
              ],
              "name": "totalMemory",
              "displayName": "Total memory",
              "schema": "long",
              "unit": "kibibyte",
              "comment": "Total available memory on the device in kilobytes. Ex. 256000 kilobytes."
          }
        ]
      }
    },
    {
      "@type": "Component",
      "name": "Co2Detector",
      "schema": {
        "@context": "dtmi:dtdl:context;2",
        "@id": "dtmi:contoso:com:Co2Detector;1",
        "@type": "Interface",
        "comment": "The device interface for a sample CO₂ detector device. ",
        "contents": [
          {
            "@type": "Telemetry",
            "comment": "Carbon Dioxide (CO₂) concentration level in ppm",
            "name": "co2",
            "schema": "integer"
          },
          {
            "@type": [
              "Telemetry",
              "Temperature"
            ],
            "comment": "Room temperature in Celsius.",
            "name": "temperature",
            "schema": "float",
            "unit": "degreeCelsius"
          },
          {
            "@type": "Property",
            "name": "modelName",
            "comment": "Model ID of the device",
            "schema": "string",
            "writable": false
          },
          {
            "@type": "Property",
            "name": "firmwareVersion",
            "comment": "Firmware version of the device",
            "schema": "string",
            "writable": false
          },
          {
            "@type": "Property",
            "name": "alarmStatus_co2",
            "comment": "CO2 alarm status",
            "schema": "boolean",
            "writable": false
          },
          {
            "@type": "Property",
            "name": "alarmThreshold_co2",
            "comment": "Value of the upper theshold of CO2 alarm",
            "schema": "integer",
            "writable": true
          },
          {
            "@type": "Command",
            "name": "clearAlarm",
            "comment": "Set payload to TRUE to Clear CO2 alarm.",
            "commandType": "synchronous",
            "request": {
              "name": "clearAlarm_co2",
              "displayName": "Clear Alarm",
              "description": "Clears alarm if true",
              "schema": "boolean"
            },
            "response": {
                "name": "alarmResponse",
                "schema": "string"
            }
          }
        ],
        "displayName": "Co2Detector"
      }
